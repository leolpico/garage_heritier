{% block year_widget %}
    {% spaceless %}
        <div {{ block('widget_container_attributes') }}>
            {{ date_pattern|replace({
                '{{ year }}':  form_widget(form.year, {'attr':{'class': 'year'} }),
                '{{ month }}': null,
                '{{ day }}':  null
            })|raw }}
            <input type="hidden" name="{{ form.day.vars.full_name}}" value="{{ form.day.vars.value }}" />
        </div>
    {% endspaceless %}
{% endblock year_widget %}