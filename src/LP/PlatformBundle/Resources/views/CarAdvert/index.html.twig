{% extends "LPPlatformBundle::layout.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block lpplatform_body %}

    <h2>Toutes les voitures</h2>

    {#<ul>#}
    <div class="row">
        {% for carAdvert in listCarAdverts %}
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img class="img_thumbnail" src="{{ asset(carAdvert.image.webPath) }}" alt="{{ carAdvert.image.alt }}">
                        <div class="caption">
                            <h3 class="text titre_annonce">{{ carAdvert.title }}</h3>
                            <div class="text descr_annonce">{{ carAdvert.description }}</div>
                            <p><a href="{{ path('lp_platform_view', {'id': carAdvert.id}) }}" class="btn btn-primary" role="button">DÃ©tails</a></p>
                        </div>
                    </div>
                </div>
        {% else %}
            <li>Pas (encore !) d'annonces</li>
        {% endfor %}
    </div>
    {#</ul>#}

{% endblock %}