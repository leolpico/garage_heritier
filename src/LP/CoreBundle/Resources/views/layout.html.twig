{# src/OC/CoreBundle/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}Garage Heritier{% endblock %}</title>

    {% block stylesheets %}
        {# On charge le CSS de bootstrap depuis le site directement #}
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset('css/main.css') }}" />
    {% endblock %}
</head>

<body>
<div class="container">
    {#<div id="header" class="page-header">#}
    <div id="header" class="jumbotron">
            <div style="float: right; margin-top: 2em;">
                <a href="https://www.renault.fr/">
                    <img src="{{ asset('uploads/logo/renault_logo.png') }}" alt="logo Renault">
                </a>
            </div>
                <h1>Garage Heritier</h1>
                <p>
                    Servir sans s’asservir ni se servir.
                </p>
                {#<p>#}
                    {#<a class="btn btn-primary btn-lg" href="https://www.renault.fr/">#}
                        {#Visiter le site Renault.fr »#}
                    {#</a>#}
                {#</p>#}
    </div>

    {{ include("LPCoreBundle:Core:navbar.html.twig") }}

    <div class="row">
        <div id="menu" class="col-md-3">

            <h3>Utilisateur</h3>

                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        Connecté en tant que <i>{{ app.user.username }}</i>
                        <br>
                        <a href="{{ path('fos_user_security_logout') }}">Déconnexion</a>
                    {% else %}
                        <a href="{{ path('fos_user_security_login') }}">Connexion</a>
                    {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
                <h3>Administration</h3>
                <a href="{{ path('sonata_admin_dashboard') }}">Gérer mon contenu</a>
            {% endif %}

            <h3>Les voitures</h3>

            <ul class="nav nav-pills nav-stacked">
                <li><a href="{{ path('lp_platform_index') }}">Annonces</a></li>
            </ul>

            <h3>Newsletter</h3>

                {{ render(controller('LPCoreBundle:Default:Newsletter')) }}
            {#<form class="well" action=" " method="post"  id="newsletter_form">#}
                {#<div class="form-group">#}
                    {#<label> Nom </label>#}
                    {#<input type="text" class="form-control" placeholder="Martin">#}
                {#</div>#}
                {#<div class="form-group">#}
                    {#<label> Prenom </label>#}
                    {#<input type="text" class="form-control" placeholder="Dupont">#}
                {#</div>#}
                {#<div class="form-group">#}
                    {#<label> Adresse email </label>#}
                    {#<input type="email" class="form-control" placeholder="example@email.com">#}
                {#</div>#}
                {#<button type="submit" class="btn btn-default">S'inscrire</button>#}
            {#</form>#}


        </div>
        <div id="content" class="col-md-9">
            {% block body %}
            {% endblock %}
        </div>
    </div>

    <hr>

    <footer>
        <p>Servir sans s’asservir ni se servir.</p>
    </footer>
</div>

{% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
{% endblock %}

</body>
</html>
